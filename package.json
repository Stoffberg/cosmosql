{
	"name": "cosmosql",
	"version": "0.5.0",
	"description": "Type-safe, minimal ORM for Azure CosmosDB",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"test": "jest && npm run test:integration",
		"test:unit": "jest --testPathIgnorePatterns=integration",
		"test:integration": "tsx integration-tests.ts",
		"lint": "biome lint src",
		"format": "biome format src --write",
		"prepublishOnly": "npm run build && npm run test && npm run type-check && npm run lint && npm run format",
		"type-check": "tsc --noEmit",
		"deploy:patch": "npm version patch && npm publish",
		"deploy:minor": "npm version minor && npm publish",
		"deploy:major": "npm version major && npm publish"
	},
	"keywords": [
		"cosmosdb",
		"azure",
		"orm",
		"typescript",
		"type-safe",
		"database",
		"nosql"
	],
	"author": "Dirk Beukes",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Stoffberg/cosmosql.git"
	},
	"bugs": {
		"url": "https://github.com/Stoffberg/cosmosql/issues"
	},
	"homepage": "https://cosmosql.dev",
	"devDependencies": {
		"@types/jest": "^29.5.0",
		"@types/node": "^20.0.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"dotenv": "^17.2.3",
		"eslint": "^8.50.0",
		"jest": "^29.7.0",
		"prettier": "^3.0.0",
		"ts-jest": "^29.1.0",
		"typescript": "^5.2.0",
		"@azure/cosmos": "^4.7.0"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
